<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>CourseP</display-name>
	<listener>
		<listener-class>listener.StartStopListener</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>playerservlet</servlet-name>
		<servlet-class>servlet.PlayerServlet</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>ua.cn.stu.service</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>playerservlet</servlet-name>
		<url-pattern>/player</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>titleservlet</servlet-name>
		<servlet-class>servlet.TitleServlet</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>ua.cn.stu.service</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>titleservlet</servlet-name>
		<url-pattern>/title</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>tournamentpartservlet</servlet-name>
		<servlet-class>servlet.TournamentPartServlet</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>ua.cn.stu.service</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>tournamentpartservlet</servlet-name>
		<url-pattern>/tournamentpart</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>tournamentservlet</servlet-name>
		<servlet-class>servlet.TournamentServlet</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>ua.cn.stu.service</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>tournamentservlet</servlet-name>
		<url-pattern>/tournament</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>openingservlet</servlet-name>
		<servlet-class>servlet.OpeningServlet</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>ua.cn.stu.service</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>openingservlet</servlet-name>
		<url-pattern>/opening</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>matchservlet</servlet-name>
		<servlet-class>servlet.MatchServlet</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>ua.cn.stu.service</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>matchservlet</servlet-name>
		<url-pattern>/match</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>openingusageservlet</servlet-name>
		<servlet-class>servlet.OpeningUsageServlet</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>ua.cn.stu.service</param-value>
		</init-param>
